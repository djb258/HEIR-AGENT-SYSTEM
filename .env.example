# HEIR Platform Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================================================

# Your PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/heir_platform

# Optional: Separate read replica for better performance
# READ_REPLICA_URL=postgresql://username:password@read-replica-host:5432/heir_platform

# ============================================================================
# PLATFORM CONFIGURATION
# ============================================================================

# Environment: development, staging, production
PLATFORM_ENV=development

# Logging level: debug, info, warn, error
LOG_LEVEL=info

# Schema version checking: strict, relaxed, disabled
SCHEMA_VERSION_CHECK=strict

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Authentication settings
AUTH_REQUIRED=true
JWT_SECRET=your-jwt-secret-key-here

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# TLS/SSL settings (for production)
TLS_REQUIRED=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# ============================================================================
# MONITORING & OBSERVABILITY (OPTIONAL)
# ============================================================================

# Enable metrics collection
METRICS_ENABLED=true

# Monitoring webhook endpoint
HEIR_MONITORING_ENDPOINT=https://your-monitoring-service.com/webhook

# Health check settings
HEALTH_CHECK_INTERVAL=30s

# Alert webhook for critical issues
ALERT_WEBHOOK=https://your-alerting-service.com/webhook

# ============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# ============================================================================

# Redis for enhanced rate limiting and caching
REDIS_URL=redis://localhost:6379/0

# Email service for notifications
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@yourdomain.com

# External API configurations
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3

# ============================================================================
# AUDIT & COMPLIANCE
# ============================================================================

# Audit log retention (in days)
AUDIT_RETENTION_DAYS=365

# Enable PII detection and masking
PII_DETECTION_ENABLED=true

# Compliance reporting endpoint
COMPLIANCE_REPORTING_ENDPOINT=https://your-compliance-system.com/api/reports

# ============================================================================
# DEVELOPMENT SETTINGS (DEVELOPMENT ONLY)
# ============================================================================

# Enable debug features (development only)
DEBUG_MODE=false

# Skip certain validations in development
SKIP_AUTH_IN_DEV=false

# Enable request/response logging
REQUEST_LOGGING_ENABLED=true

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=20

# ============================================================================
# APPLICATION-SPECIFIC SETTINGS
# ============================================================================

# Your application identifier (used in doctrine headers)
APP_BLUEPRINT_ID=your-app-name

# Application-specific API keys
YOUR_SERVICE_API_KEY=your-service-api-key-here

# Feature flags
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_REAL_TIME_SYNC=true

# ============================================================================
# CLOUD PROVIDER SETTINGS (IF APPLICABLE)
# ============================================================================

# AWS Configuration (if using AWS services)
# AWS_REGION=us-west-2
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Google Cloud Configuration (if using GCP services)
# GOOGLE_CLOUD_PROJECT_ID=your-gcp-project
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure Configuration (if using Azure services)
# AZURE_SUBSCRIPTION_ID=your-azure-subscription
# AZURE_CLIENT_ID=your-azure-client-id
# AZURE_CLIENT_SECRET=your-azure-client-secret